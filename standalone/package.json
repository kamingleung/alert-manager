{
  "name": "@anirudhaj/alarms",
  "version": "1.0.1",
  "description": "Standalone Alarms service for OpenSearch Dashboards",
  "bin": {
    "osd-alarms": "./bin/cli.js"
  },
  "main": "dist/standalone/server.js",
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "ts-node --project tsconfig.server.json server.ts",
    "dev:client": "webpack serve --mode development",
    "build": "npm run build:client && npm run build:server",
    "build:server": "tsc --project tsconfig.server.json",
    "build:client": "webpack --mode production",
    "start": "node dist/standalone/server.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "opensearch",
    "dashboards",
    "alarms",
    "alerts",
    "monitoring"
  ],
  "author": "OpenSearch Project",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/anirudha/alert-manager.git",
    "directory": "standalone"
  },
  "dependencies": {
    "@elastic/datemath": "^5.0.3",
    "@opensearch-project/oui": "^1.22.1",
    "express": "^4.18.2",
    "moment": "^2.30.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-router-dom": "^5.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.19.0",
    "@types/react": "^16.14.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.3.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}

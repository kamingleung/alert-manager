{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "types": ["react", "react-dom", "node"]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "../core/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
